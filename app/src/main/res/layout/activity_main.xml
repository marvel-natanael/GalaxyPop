<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/j"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:fontFamily="@font/montserratblack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Best Result : 0"
        android:gravity="center"
        android:lines="2"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_taps"
        android:fontFamily="@font/montserratblack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="220dp"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_info"
        android:fontFamily="@font/montserratblack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tap Planet To Start"
        android:textSize="24sp"
        android:layout_marginTop="420dp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_lose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"
        android:textSize="24sp"
        android:gravity="center"
        android:fontFamily="@font/montserratblack"
        android:textColor="#FFFFFF" />


    <ImageButton
        android:id="@+id/button"
        android:layout_width="640px"
        android:layout_height="640px"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="200px"
        android:layout_marginTop="640px"
        android:layout_marginRight="200px"
        android:layout_marginBottom="640px"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/planet1" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginLeft="50px"
        android:layout_marginTop="64px"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/back" />

</RelativeLayout>